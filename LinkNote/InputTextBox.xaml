<Window x:Class="Muscipular.LinkNote.InputTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=Title}" Height="Auto" Width="Auto" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Icon="/LinkNote;component/Book_JournalwPen.ico">
    <StackPanel Width="364">
        <TextBlock HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" VerticalAlignment="Top" Text="{Binding Path=Message}"/>
        <WrapPanel>
            <TextBox HorizontalAlignment="Left" Margin="12,10,0,0" Name="tbxContent" VerticalAlignment="Top"
                     Width="340" Text="{Binding Path=Text, Mode=OneWayToSource}" Visibility="Collapsed" />
            <PasswordBox HorizontalAlignment="Left" Margin="12,10,0,0" Name="pwd1" VerticalAlignment="Top"
                     Width="340" Visibility="Collapsed" />
            <Button Content="确定" Height="23" HorizontalAlignment="Left" Margin="196,10,0,10" Name="btnOK"
                    VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnOK_Click"/>
            <Button Content="取消" Height="23" HorizontalAlignment="Left" Margin="6,10,0,10" Name="btnCancle"
                    VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
